/* pages/profile/profile.wxss */
/*最外层样式*/
.profile{
  background: #e54847;
  height: 400rpx;
  text-align: center;
  position: relative;
  width: 100%;
}
/*用户头像样式*/
.profile-img{
  width: 200rpx;
  height: 200rpx;
  position: absolute;
  display: block;
  overflow: hidden;
  border-radius: 50%; /*50%；圆形*/
  left: 50%;  /*居中*/
  transform: translate(-50%,60rpx); /*居中*/
}
/*文字样式*/
.profile-name{
  font-size: 36rpx;
  color: #fff;
  position: absolute;
  left: 50%;
  transform: translate(-50%,270rpx);
}
