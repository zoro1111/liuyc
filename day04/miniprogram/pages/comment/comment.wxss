/* pages/comment/comment.wxss */
.detail-container{
  height: 400rpx;
  filter: blur(10rpx); /*模糊滤镜*/
  opacity: .5         /*透明度*/
}
/*底层 遮罩层*/
.detail-mask{
  position: absolute;
  width: 100%;
  height: 400rpx;
  background-color:#333;
  top: 0;
  left: 0;
  z-index: -1; 
}
/*电影详情列表*/
.detail-info{
  position: absolute;  /*绝对定位*/
  display: flex;   /*弹性布局*/
  top: 0;
  left: 0;
  width: 100%;
  height: 400rpx;  /*高度与遮罩层一样*/
  padding: 20rpx;
}
.detail-img{
  width: 280rpx;
  height: 90%;
  margin-right: 24rpx; /*右侧文字间距*/
}
/*右侧区域样式,占满剩余部分*/
.detail{ 
  flex: 1; /*将剩余空间等分占满*/
  line-height: 60rpx;
}
.detail view{
  color: #fff;
  font-size: 25rpx;
}
/*打分*/
.detail-sc{
  color: #fc0 !important;
  font-size: 36rpx !important;
  font-weight: 700 !important;
}
/*文字描述样式*/
.desc{
  padding: 20rpx;
  font-size: 24rpx;
  color: #555;
}
/*预览图片样式*/
.comment-img{
  width: 200rpx;
  height: 200rpx;
  margin-right: 20rpx;
}